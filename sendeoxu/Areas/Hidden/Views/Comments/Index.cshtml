@model IEnumerable<sendeoxu.Models.Comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Hidden/Views/Shared/_Layout1.cshtml";
}

<h2>Comments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.comment1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Source.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.fullname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.comment1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Source.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.fullname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
